<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/refreshButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        android:src="@drawable/ic_refresh"
        app:layout_constraintBottom_toBottomOf="@+id/citySpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/citySpinner" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/forecast_recycler"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/citySpinner"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:background="@null"
        app:layout_constraintEnd_toStartOf="@+id/refreshButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/weather_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/weather_background"
        app:layout_constraintBottom_toTopOf="@+id/forecast_recycler"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/citySpinner"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/weatherImage"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/weather_background"
        app:layout_constraintEnd_toEndOf="@+id/weather_background"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/weather_background"
        app:layout_constraintTop_toTopOf="@+id/weather_background" />

    <TextView
        android:id="@+id/temperatureValueText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="14"
        android:textColor="@color/primary_text_color"
        android:textSize="56dp"
        app:layout_constraintEnd_toStartOf="@+id/temperatureUnitText"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/weather_background"
        app:layout_constraintTop_toBottomOf="@+id/weatherImage" />

    <TextView
        android:id="@+id/temperatureUnitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â°C"
        android:textColor="@color/primary_text_color"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="@+id/weather_background"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@+id/temperatureValueText"
        app:layout_constraintTop_toTopOf="@+id/temperatureValueText" />

    <ImageView
        android:id="@+id/windImage"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_wind"
        app:layout_constraintBottom_toTopOf="@+id/windText"
        app:layout_constraintEnd_toEndOf="@+id/windText"
        app:layout_constraintStart_toStartOf="@+id/windText" />

    <ImageView
        android:id="@+id/pressureImage"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_pressure"
        app:layout_constraintBottom_toBottomOf="@+id/windImage"
        app:layout_constraintEnd_toEndOf="@+id/pressureText"
        app:layout_constraintStart_toStartOf="@+id/pressureText" />

    <ImageView
        android:id="@+id/humidityImage"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:src="@drawable/ic_humidity"
        app:layout_constraintBottom_toBottomOf="@+id/windImage"
        app:layout_constraintEnd_toEndOf="@+id/humidityText"
        app:layout_constraintStart_toStartOf="@+id/humidityText" />

    <TextView
        style="@style/label_text"
        android:id="@+id/windText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="10m/s"
        app:layout_constraintBottom_toBottomOf="@+id/weather_background"
        app:layout_constraintEnd_toStartOf="@+id/pressureText"
        app:layout_constraintStart_toStartOf="@+id/weather_background" />

    <TextView
        style="@style/label_text"
        android:id="@+id/pressureText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1050hPA"
        app:layout_constraintBottom_toBottomOf="@+id/windText"
        app:layout_constraintEnd_toStartOf="@id/humidityText"
        app:layout_constraintStart_toEndOf="@id/windText" />

    <TextView
        style="@style/label_text"
        android:id="@+id/humidityText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="48%"
        app:layout_constraintBottom_toBottomOf="@+id/windText"
        app:layout_constraintEnd_toEndOf="@+id/weather_background"
        app:layout_constraintStart_toEndOf="@+id/pressureText" />

</androidx.constraintlayout.widget.ConstraintLayout>