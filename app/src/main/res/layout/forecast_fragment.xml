<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="com.example.weather.viewmodel.ForecastViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/forecast_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/forecast_tv_weekDay"/>

        <TextView
            android:id="@+id/forecast_tv_weekDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32dp"
            android:textColor="@color/primary_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/forecast_img_weather"/>

        <TextView
            android:id="@+id/forecast_tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:textSize="16dp"
            android:textColor="@color/primary_text_color"
            app:layout_constraintStart_toEndOf="@+id/forecast_tv_weekDay"
            app:layout_constraintBottom_toBottomOf="@+id/forecast_tv_weekDay"/>

        <ImageView
            android:id="@+id/forecast_img_weather"
            android:layout_width="128dp"
            android:layout_height="128dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/forecast_tv_temperature_day_label"/>

        <TextView
            android:id="@+id/forecast_tv_temperature_day_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_temperature_label"
            android:textColor="@color/primary_text_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/forecast_tv_temperature_night_label"
            app:layout_constraintBottom_toBottomOf="@+id/forecast_tv_temperature_night_label" />

        <TextView
            android:id="@+id/forecast_tv_temperature_night_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/night_temperature_label"
            android:textColor="@color/primary_text_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/forecast_tv_temperature_day_label"
            app:layout_constraintBottom_toTopOf="@+id/forecast_tv_temperature_night"/>

        <TextView
            android:id="@+id/forecast_tv_temperature_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_color"
            app:layout_constraintStart_toStartOf="@+id/forecast_tv_temperature_day_label"
            app:layout_constraintEnd_toEndOf="@+id/forecast_tv_temperature_day_label"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/forecast_tv_temperature_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text_color"
            app:layout_constraintStart_toStartOf="@+id/forecast_tv_temperature_night_label"
            app:layout_constraintEnd_toEndOf="@+id/forecast_tv_temperature_night_label"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

